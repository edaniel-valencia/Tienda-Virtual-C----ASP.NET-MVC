        </div>
    </div>
</div>


@section scripts{
    <script>
        var dataTable;

        @*jQuery.ajax({
            url: '@Url.Action("ListUser", "Home")',
            type: "GET",
            dataType: "json",
            contentType: "application/json; charset=utf-8",
            success: function (data) {
                console.log(data)
            }
        })*@

        dataTable = $("#table").DataTable({
            responsive: true,
            ordering: false,
            "ajax": {
                url: '@Url.Action("ListUser", "Home")',
                type: "GET",
                dataType: "json"
            },
            "columns": [
                //{ "data": "Uid" },
                { "data": "Uname" },
                { "data": "Ulastname" },
                { "data": "Uemail" },
                { "data": "Uphone" },
                //{ "data": "Upassword" },
                {
                    "data": "Ustatus", "render": function (valor) {
                        if (valor) {
                            return '<span class="badge rounded-pill text-bg-primary">Activo</span>'
                        } else {
                            return '<span class="badge rounded-pill text-bg-danger">Inactivo</span>'
                        }
                    }
                },
                {
                    "data": "Ureset", "render": function (valor) {
                        if (valor) {
                            return '<span class="badge rounded-pill text-bg-primary">Si</span>'
                        } else {
                            return '<span class="badge rounded-pill text-bg-danger">No</span>'
                        }
                    }
                },
                {
                    "defaultContent": '<button class="btn btn-primary btn-sm ms-1 btn-edit" onclick="openModalUpdate(null)"><i class="fas fa-pen"></i></button>' +
                        '<button class="btn btn-warning btn-sm ms-1 btn-view" onclick="openModalDelete()"><i class="fas fa-eye"></i></button>' +
                        '<button class="btn btn-danger  btn-sm ms-1 btn-delete" onclick="openModalView()"><i class="fas fa-trash"></i></button>',
                    "orderable": false,
                    "searchable": false,
                    "width": "100px"
                }
            ],
            language: {
                url: '//cdn.datatables.net/plug-ins/2.1.8/i18n/es-ES.json'
            }

        });

        // Modal Create

        function openModalCreate(json) {
            $("#modalCreate").modal("show")
        }

        function Create() {

            var create = {
                Uname: $("#name").val(),
                Ulastname: $("#lastname").val(),
                Uemail: $("#email").val(),
                Uphone: $("#phone").val(),
                Upassword: $("#password").val(),
                Ustatus: $("#status").val() 
            }

            try {
                dataTable.row.add(create).draw(false);
            } catch (error) {
                console.error("Error while adding a row to the DataTable: ", error);            
            }
           
            $("#modalCreate").modal("hide")

        }

        // Modal Update

        function openModalUpdate(json) {
            if (json != null) {
                $("#Uname").val(json.Uname);
                $("#Ulastname").val(json.Ulastname);
                $("#Uemail").val(json.Uemail);
                $("#Uphone").val(json.Uphone);

                //$("#Ustatus").val(json.Ustatus == true ? "Activo" : "Inactivo");
                // Mapear valores de Ustatus a descripciones

                const statusMap = {
                    1: 1,
                    0: 0,
                    2: 2,
                    3: 3
                };
                $("#Ustatus").val(statusMap[json.Ustatus] || "Desconocido");
               }
            $("#modalUpdate").modal("show")
        }

        $("#table tbody").on("click", '.btn-edit', function () {
            var rowSelect = $(this).closest("tr");
            console.log("EDIT REGISTER", dataTable.row(rowSelect).data())
            var data = dataTable.row(rowSelect).data();
            console.log(data)
            openModalUpdate(data)
        })


        // Modal View

        function openModalView() {
            $("#modalDelete").modal("show")
        }

        $("#table tbody").on("click", '.btn-view', function () {
            var rowSelect = $(this).closest("tr");
            console.log("VIEW REGISTER", dataTable.row(rowSelect).data())
            var data = dataTable.row(rowSelect).data();
            console.log(data)
        })

        // Modal Delete

        function openModalDelete() {
            $("#modalView").modal("show")
        }

        $("#table tbody").on("click", '.btn-delete', function () {
            /*alert("Hola")*/
            var rowSelect = $(this).closest("tr");
            console.log("DELETE REGISTER",dataTable.row(rowSelect).data())
            var data = dataTable.row(rowSelect).data();
            console.log(data)
        })



    </script>

}

