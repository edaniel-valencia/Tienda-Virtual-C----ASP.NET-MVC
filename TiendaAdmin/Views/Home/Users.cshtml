                                <label for="">Apellidos</label>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-floating mb-2">
                                <input type="email" class="form-control" id="Uemail" placeholder="ejemplo@correo.com" required>
                                <label for="">Correo electrónico</label>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-floating mb-2">
                                <input type="text" class="form-control" id="Uphone" placeholder="">
                                <label for="">Teléfono</label>
                            </div>
                        </div>
                        <div class="col-sm-12">
                            <div class="form-floating">
                                <select class="form-select" id="Ustatus" aria-label="Estado del usuario">
                                    <option value="1">Activo</option>
                                    <option value="0">Inactivo</option>
                                    <option value="2">Suspendido</option>
                                    <option value="3">Eliminado</option>
                                </select>

                                <label for="floatingStatus">Estado</label>
                            </div>
                        </div>
                    </div>                
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Guardar</button>
                </div>

            </form>
        </div>
    </div>
</div>


<!-- Modal Delete -->
<div class="modal fade" id="modalDelete" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="modalCreateLabel" aria-hidden="true">
