
@{
    ViewBag.Title = "Users";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="mt-3">
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="index.html">Dashboard</a></li>
        <li class="breadcrumb-item active">Tables</li>
    </ol>
</div>


<div class="card">
    <div class="card-header">
        Featured
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-12">
                <button type="button" class="btn btn-primary rounded" onclick="openModalCreate()">
                    <i class="fa fa-plus" aria-hidden="true"></i> Nuevo Usuario
                </button>
            </div>
        </div>
        <hr />
        <table class="display cell-border" id="table" style="width:100%">
            <thead>
                <tr>
                    @*<th scope="col">#</th>*@
                    <th scope="col">Nombres</th>
                    <th scope="col">Apellidos</th>
                    <th scope="col">Correo Electrónico</th>
                    <th scope="col">Telefóno</th>
                    <th scope="col">Estado</th>
                    <th scope="col">Reseteo</th>
                    <th scope="col">Reseteo</th>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
    </div>
</div>

<!-- Modal Create -->
<div class="modal fade" id="modalCreate" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="modalCreateLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">

            <div class="modal-header">
                <h1 class="modal-title fs-5" id="modalCreateLabel">Crear nuevo usuario</h1>
                <button type="button" class="btn-close btn-danger" data-bs-dismiss="modal" aria-label="Cerrar"></button>
            </div>

            <form>
                <div class="modal-body">
                    <div class="form-floating px-1 mb-2  ">
                        <input type="text" name="Uname" class="form-control" id="name" placeholder="">
                        <label for="floatingName">Nombre</label>
                    </div>
                    <div class="form-floating px-1 mb-2 ">
                        <input type="text"  name="Ulastname" class="form-control" id="lastname" placeholder="">
                        <label for="floatingLastname">Apellidos</label>
                    </div>
                    <div class="form-floating px-1 mb-2">
                        <input type="email"  name="Uemail" class="form-control" id="email" placeholder="">
                        <label for="floatingEmail">Correo electrónico</label>
                    </div>
                    <div class="form-floating px-1 mb-2">
                        <input type="text"  name="Uphone" class="form-control" id="phone" placeholder="">
                        <label for="floatingPhone">Teléfono</label>
                    </div>
                    <div class="form-floating px-1 mb-2 ">
                        <input type="password" name="Upassword" class="form-control" id="password" placeholder="">
                        <label for="floatingPassword">Contraseña</label>
                    </div>
                    <div class="form-floating">
                        <select class="form-select"  name="Ustatus" id="status" aria-label="Floating label select example">
                            <option selected>Selecciona el estado del usuario</option>
                            <option value="0">Inactivo</option>
                            <option value="1">Activo</option>
                            <option value="2">Suspendido</option>
                            <option value="3">Eliminado</option>
                        </select>
                        <label for="floatingStatus">Estado</label>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary" onsubmit="Create()">Guardar</button>
                </div>
            </form>
                
        </div>
    </div>
</div>


<!-- Modal Update -->
<div class="modal fade" id="modalUpdate" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="modalCreateLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="modalCreateLabel">Actualizar usuario</h1>
                <button type="button" class="btn-close btn-danger" data-bs-dismiss="modal" aria-label="Cerrar"></button>
            </div>
            <form>
                <div class="modal-body">

                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-floating mb-2  ">
                                <input type="text" class="form-control" id="Uname" placeholder="">
